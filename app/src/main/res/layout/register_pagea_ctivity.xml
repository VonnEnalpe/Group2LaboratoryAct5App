<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AUTHENTICATION.RegisterPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Sign Up"
                android:textColor="@color/text_gray"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/signinput_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="36dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/input_corners"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:textColor="#292929"
                android:textColorHint="#ACACAC" />

            <EditText
                android:id="@+id/signinput_firstname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/input_corners"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName|textEmailAddress"
                android:paddingLeft="20dp"
                android:textColor="#292929"
                android:textColorHint="#ACACAC" />

            <EditText
                android:id="@+id/signinput_middlename"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/input_corners"
                android:ems="10"
                android:hint="Middle Name"
                android:inputType="textPersonName|textEmailAddress"
                android:paddingLeft="20dp"
                android:textColor="#292929"
                android:textColorHint="#ACACAC" />

            <EditText
                android:id="@+id/signinput_lastname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/input_corners"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:textColor="#292929"
                android:textColorHint="#ACACAC" />

            <EditText
                android:id="@+id/signinput_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/input_corners"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:password="true"
                android:textColor="#292929"
                android:textColorHint="#ACACAC" />

            <EditText
                android:id="@+id/signinput_confirmationPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/input_corners"
                android:ems="10"
                android:hint="Confirmation Password"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:password="true"
                android:textColor="#292929"
                android:textColorHint="#ACACAC" />

            <EditText
                android:id="@+id/signinput_contanctNumber"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/input_corners"
                android:ems="10"
                android:hint="Contact Number"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:textColor="#292929"
                android:textColorHint="#ACACAC" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:alpha="0.7"
                android:gravity="center"
                android:text="Location"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/SPACER"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/input_corners"
                android:clickable="false"
                android:ems="10"
                android:inputType="textPersonName|textEmailAddress"
                android:paddingLeft="20dp"
                android:textColor="#292929"
                android:textColorHint="#ACACAC" />

            <Spinner
                android:id="@+id/brgy_spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-46dp"
                android:layout_marginRight="40dp" />

            <EditText
                android:id="@+id/signinput_detailedAddress"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/input_corners"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Detailed Address\n(Unit number, House number, Building, Street name)"
                android:inputType="textMultiLine"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#292929" />

            <Button
                android:id="@+id/Btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/btn_corners"
                android:text="Next to Verification"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:backgroundTint="@color/teal_200" />

            <ProgressBar
                android:id="@+id/progressBar_register"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>